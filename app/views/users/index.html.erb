<% if @user %>
<div class="columns">
  <div class="column">
    <h1>-今日も1日頑張ろう-</h1>
  </div>
  <div class="column">
    <p>メール  <%= @user.email %></p>
    <p>会員番号  <%= @user.id %></p>
  </div>
</div>
<div class="columns">
    <% if @user.userinfo %>
      <div class="column">
        <p>名前  <%= @user.userinfo.name %></p>
        <p>情報  <%= @user.userinfo.profile %></p>
      </div>
      <div class="column">
        <p><%= link_to '変更', edit_userinfo_path(@user.userinfo.id) ,class: 'button is-success is-focused'%></p>
      </div>
    <% else %>
      <div class="column">
        <p><%= link_to 'NEW', new_userinfo_path ,class: 'button is-success is-focused'%></p>
      </div>
    <% end %>
</div>

<div>
<table class="table">
  <thead>
    <tr>
      <th>予定</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.todos.each do |todo| %>
    <tr>
      <td><%= todo.title %></td>
      <td><%= link_to '詳しく', todo ,class: 'button is-info is-focused'%></td>
      <td><%= link_to '変更', edit_todo_path(todo.id) ,class: 'button is-success is-focused'%></td>
      <td><%= link_to '削除', todo, method: :delete, data: { confirm: 'Are you sure?' },class: 'button is-danger is-focused' %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to '新しい予定', new_todo_path ,class: 'button is-primary is-focused'%>
<%end%>

